@model Crm.Application.ViewModels.AccountViewModels.ForgetPasswordViewModel

<br />
<div class="container">
    <div class="col s12 m12 l12 push-xl2 xl8 center center-align">
        <form method="post">

            <h3>Recuperar Senha</h3>
            <div class="input-field center">
                <input asp-for="Email" id="Email" type="email" class="validate" data-length="100" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="helper-text" data-error="E-mail invalido" data-success="Email Valido"></span>
            </div>

            <div>
                <button asp-action="ForgotPassword" method="post" type="submit" class="btn teal lighten-2 waves-effect">Recuperar Senha</button>
            </div>
            <br />
        </form>
    </div>
</div>