@using Crm.Application.ViewModels.AccountViewModels
@model Crm.Application.ViewModels.AccountViewModels.LoginViewModel

<div class="container">
    <div class="col s12 m12 push-l2 l8 push-xl2 xl8 center">
        <form method="post">
            <div>

                <br />

                <h3>Login</h3>
                <div class="input-field col s12 m12 l12 xl12 center">
                    <input asp-for="Email" id="Email" type="email" class="validate" data-length="100" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="helper-text" data-error="E-mail invalido" data-success="Email Valido"></span>
                </div>

                <div class="input-field col s12 m12 l12 xl12 center">
                    <input asp-for="Senha" id="Senha" type="password" class="validate" min="6" data-length="16" />
                    <label asp-for="Senha"></label>
                    <span asp-validation-for="Senha" class="helper-text" data-error="Número maximo de caracteres = 16"></span>
                </div>

                <br />
                <br />

                <div class="input-field col s12 m12 l12 xl12 center">
                    <button type="submit" title="SignIn" asp-action="" class="btn teal lighten-2 center waves-effect">Fazer Login</button>
                </div>

                <div class="col s12 m12 l12 xl12 center" style="padding: 10px 0 0 0">
                    <span>Ou <a asp-action="ForgotPassword" method="post"><b>Esqueceu a Senha</b></a></span>
                </div>
                
                <div class="col s12 m12 l12 xl12 center" style="padding: 20px 0 0 0">
                    <span>Não tem uma conta? <a asp-action="Register" method="post"><b>Cadastre-se</b></a></span>
                </div>                 
            </div>
        </form>
    </div>
</div>